<script>
	document.getElementById("addMoney").addEventListener("click",async function () {
		let amountInput = document.getElementById("amount");
		let amountError = document.getElementById("amountError");
		let amount = parseFloat(amountInput.value.trim());
		let minAmount = 1;
		let maxAmount = 10000;
	
		if (isNaN(amount) || amount < minAmount || amount > maxAmount) {
			amountError.textContent = `Amount must be between ${minAmount} and ${maxAmount}!`;
			amountError.classList.remove("d-none");
			amountInput.classList.add("is-invalid");
		} else {
			const amount=document.getElementById("amount").value
        let modal = new bootstrap.Modal(document.getElementById("addMoneyModal"));
        modal.hide();
			const res = await fetch("/razorpay/create-order", {
				method: "POST",
				headers: { "Content-Type": "application/json" },
				body: JSON.stringify({ amount,isWallet:true}) // Amount in INR
			});

			const order = await res.json();

			const options = {
				key: "rzp_test_7JLPi5q56mAlpG", // Replace with your Razorpay Key ID
				amount: order.amount,
				currency: "INR",
				name: "FreshKart",
				description: "FreshKart",
				order_id: order.id,
				handler: async function (response) {
					const verifyRes = await fetch("/razorpay/verify-payment", {
						method: "POST",
						headers: { "Content-Type": "application/json" },
						body: JSON.stringify(response)
					});

					const verifyData = await verifyRes.json();
					if(verifyData.message){
						
						Swal.fire({
    title: "Success!",  
    text: verifyData.message,  
    icon: "success",  // Adds a success icon
    confirmButtonColor: "#28a745",  // Bootstrap success green
});
					setTimeout(()=>{
                window.location.reload();
                },1000)
					}
				
				}
			};

			const rzp = new Razorpay(options);
			rzp.open()
		}
	});
	
	// Live validation to remove error on input change
	document.getElementById("amount").addEventListener("input", function () {
		document.getElementById("amountError").classList.add("d-none");
		this.classList.remove("is-invalid");
	});
	</script>


