<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="/styles/csscommon.css">
    <link rel="stylesheet" href="/styles/validationCommon.css">


</head>

<body>
  <div id="loading-screen" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.8); color: white; font-size: 24px; text-align: center; line-height: 100vh; z-index: 100;">
    OTP sending... Please wait.
  </div>
    <div class="validationHeader row contain-width">
        <div class="headerLogo col-lg-6 col-2 pt-3 ">
            <img src="/images/freshKartLogo/freshcart-logo.png" alt="">
        </div>       

        <p class="pt-3 col-10 col-lg-6 text-end">Already Have an account? <a href="/auth/signin" class="text-success text-decoration-none">Sign in</a></p>
    </div>
<!-- Sign up Page -->


<div class="validation-form row contain-width mt-5 mb-5">
    <div class="sign-in-image col-lg-6 text-end">
        <img src="/images/validation/signup-g.png" alt="">
    </div>
    <div class="sign-up-content col-lg-6 col-md-6">
     
        <h2>Get Start Shopping</h2>
        <p>Welcome to FreshCart! Enter your email to get started.</p>
        <form id="sign-up-form">
            <!-- First Name and Last Name -->
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName" placeholder="Enter your first name" required name="firstName">
                <span class="error-style" id="firstNameError"></span>
              </div>
              <div class="col-md-6">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" placeholder="Enter your last name" required name="secondName">
                <span class="error-style" id="lastNameError"></span>
              </div>
            </div>
            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" placeholder="Enter your email" required name="email">
              <span class="error-style" id="emailError"></span>
            </div>
            <!-- Phone Number -->
            <div class="mb-3">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" placeholder="Enter your phone number" required name="phoneNumber" maxlength="10">
              <span class="error-style" id="phoneError"></span>
            </div>
            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <div style="position: relative;">
                <input type="password" class="form-control" id="password" placeholder="Create a password" required name="password">
                <span id="togglePassword" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">
                    <svg id="eyeIcon" width="20px" height="20px" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M24 40.9999C33.9411 40.9999 42 32.6778 42 26.9999C42 21.3219 33.9411 12.9999 24 12.9999C14.0589 12.9999 6 21.3277 6 26.9999C6 32.6721 14.0589 40.9999 24 40.9999Z" fill="#2F88FF" stroke="#000000" stroke-width="4" stroke-linejoin="round"/>
                        <path d="M24 32.9999C27.3137 32.9999 30 30.3136 30 26.9999C30 23.6862 27.3137 20.9999 24 20.9999C20.6863 20.9999 18 23.6862 18 26.9999C18 30.3136 20.6863 32.9999 24 32.9999Z" fill="#43CCF8" stroke="white" stroke-width="4" stroke-linejoin="round"/>
                    </svg>
                </span>
            </div>

            <div class="mb-3 mt-3">
              <label for="referralCode" class="form-label">Do You Have Referral Code ?</label>
              <div style="position: relative;">
                <input type="text" class="form-control" id="referralCode" placeholder="Enter Your Referral Code" name="referralCode" maxlength="6">
            </div>
              <span class="error-style" id="referralCodeError"></span>
            </div>
            <!-- Sign-Up Button -->
            <button type="submit" class="btn btn-success submit-btn">Sign Up</button>
          </form>
          <p class="error-style w-100 text-center" id="userExistError"></p>
          <!-- Divider -->
          <div class="text-center my-3">
            <span>or</span>
          </div>
          <!-- Google Login Button -->
           <a href="/auth/google/signup" target="blank">
          <button type="button" class="btn btn-outline-danger" id="google-signup">
            <img src="/images/validation/google-brands-solid.png" alt="" class="google-icon me-3"> Sign Up with Google
          </button>
        </a>

       
  
   
    </div>
</div>
<!-- Sign up Page -->
    <%-include('../partials/footer')%>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/sign-up-validator.js"></script>
<script src="/js/sign-up.js"></script>
<script>
  document.getElementById("togglePassword").addEventListener("click", function () {
let passwordInput = document.getElementById("password");
if (passwordInput.type === "password") {
    passwordInput.type = "text";
} else {
    passwordInput.type = "password";
}
});
</script>
</body>
</html>